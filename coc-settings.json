{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp", "cuda"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "highlight": { "lsRanges" : true }
            }
        }
    },
    "snippets.extends": {
      "cpp": ["c"],
      "typescript": ["javascript"]
    },
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.width": 30,
    "explorer.keyMappings": {
      "<space>": "toggleSelection"
    },
    "latex.build.executable": "latexmk",
    "latex.build.args": ["-xelatex"],
    "latex.lint.onSave": true,
    "python.jediEnabled": false,
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Enabled": true,
    "python.formatting.provider": "autopep8",
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.maxFileSize":"1MB",
    "suggest.floatEnable": true,
    "suggest.echodocSupport": false,
    "suggest.timeout": 5000,
    "suggest.maxCompleteItemCount": 200,
    "suggest.minTriggerInputLength": 2,
    "codeLens.enable": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.useQuickfixForLocations": false,
    "coc.preferences.extensionUpdateCheck":"weekly",
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.showOnStartup": false,
    "omnisharp.useDotnet": false
}
