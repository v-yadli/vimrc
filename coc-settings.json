{
    "languageserver": {
        "csharp-ls": {
          "command": "csharp-ls",
          "filetypes": ["cs"],
          "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        },
//        },
//        "ccls": {
//            "command": "ccls",
//            "filetypes": ["c", "cpp", "objc", "objcpp", "cuda"],
//            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
//            "initializationOptions": {
//                "cache": {
//                    "directory": ".ccls-cache"
//                },
//                "highlight": { "lsRanges" : true }
//            }
//        }
    },

    "snippets.extends": {
      "cpp": ["c"],
      "typescript": ["javascript"]
    },

    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source":"builtin",
    "explorer.previewAction.onHover": false,
    "explorer.width": 30,
    "explorer.keyMappings.global": {
      "<space>": "toggleSelection"
    },

    "FSharp.UseSdkScripts": true,
    "FSharp.Linter": false,

    "xml.fileAssociations": [
        {
            "systemId": "https://raw.githubusercontent.com/dotnet/msbuild/master/src/MSBuild/Microsoft.Build.xsd",
            "pattern": "**/*.fsproj"
        },
        {
            "systemId": "C:/Users/Yatao/AppData/Local/nvim/xsd/AvaloniaXamlSchema.xsd",
            "pattern": "**/*.xaml"
        },
        {
            "systemId": "https://raw.githubusercontent.com/dotnet/msbuild/master/src/MSBuild/Microsoft.Build.xsd",
            "pattern": "**/*.csproj"
        }
    ],
    "xml.logs.client": true,
    "xml.trace.server": "verbose",

    // not good. wrong formats:
    // "texlab.build.args": ["-xelatex"],
    "texlab.forwardSearch.executable": "SumatraPDF.exe",
    "texlab.forwardSearch.args": [
      "-reuse-instance",
      "%p",
      "-forward-search",
      "%f",
      "%l"
    ],
    "texlab.build.onSave":true,
    "texlab.chktex.onOpenAndSave":true,

    "coc.preferences.promptInput": true,
    "coc.preferences.enableMessageDialog": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.maxFileSize":"1MB",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.useQuickfixForLocations": false,
    "coc.preferences.extensionUpdateCheck":"weekly",
    "coc.preferences.enableMarkdown": true,
    "codeLens.position": "eol",
    "semanticTokens.filetypes":[ "fsharp" ],
    "hover.target": "float",
    "suggest.floatEnable": true,
    "suggest.echodocSupport": false,
    "suggest.timeout": 10000,
    "suggest.maxCompleteItemCount": 200,
    "suggest.minTriggerInputLength": 2,
    "codeLens.enable": true,

    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.showOnStartup": false,
    "omnisharp.trace.server": "verbose",
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.0/clangd_14.0.0/bin/clangd"
}
